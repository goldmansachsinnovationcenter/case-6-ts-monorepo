{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env.*", ".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "BIO_S3_BUCKET_NAME",
        "EO_CLOUD_API_DOMAIN",
        "NODE_ENV",
        "PASSTHROUGH_\\*",
        "VITE_LAMBDA_S3_BUCKET_NAME",
        "VITE_CLOUD_API_DOMAIN"
      ]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV", "VITEST_LOG_LEVEL", "EO_CLOUD_API_DOMAIN", "BIO_S3_BUCKET_NAME"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV", "VITEST_LOG_LEVEL", "EO_CLOUD_API_DOMAIN", "BIO_S3_BUCKET_NAME"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "EO_CLOUD_API_DOMAIN", "BIO_S3_BUCKET_NAME", "PASSTHROUGH_\\*"]
    }
  }
}
